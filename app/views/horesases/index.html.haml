%h1 Listing horesases

%form
  %table
    - @horesase_boys.each do |boy|
      %tr
        %td= boy['id']
        %td
          %img{:src => boy['image']}
        %td
          %textarea.horesase-body{'data-id' => boy['id']}= boy['body']
  %input#save{:type => 'button', :value => 'Save'}
%br

= link_to 'New Horesase', new_horesase_path
