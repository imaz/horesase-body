= form_for @horesase do |f|
  -if @horesase.errors.any?
    #error_explanation
      %h2= "#{pluralize(@horesase.errors.count, "error")} prohibited this horesase from being saved:"
      %ul
        - @horesase.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :id
    = f.number_field :id
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
